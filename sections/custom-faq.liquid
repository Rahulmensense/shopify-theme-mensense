<div class="faq-are">
  <div class="ms-faq">
    <div class="about-content faq">
      <div class="section-heading mb-40">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    </div>
    <ul class="faq-list">
      {% for block in section.blocks %}
        <li class="faq-item">
          <button class="faq-question" onclick="this.classList.toggle('active'); this.nextElementSibling.classList.toggle('show');">
            {{ block.settings.question }}
            <span class="faq-toggle">+</span>
          </button>
          <div class="faq-answer">
            <p>{{ block.settings.answer }}</p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Custom FAQ",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Faq Heading",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Are Your Products Cruelty Free?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Yes, all our products are 100% cruelty-free and ethically sourced."
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom FAQ",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "Are Your Products Cruelty Free?",
            "answer": "Yes, all our products are 100% cruelty-free and ethically sourced."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "Do You Offer International Shipping?",
            "answer": "Yes, we ship globally. Delivery times may vary based on location."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "Are Your Ingredients Natural?",
            "answer": "Our products are formulated with high-quality natural and safe ingredients."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "Can I Return a Product?",
            "answer": "Yes, we offer a 7-day return policy. Please refer to our Return & Refund Policy."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "How Can I Contact Support?",
            "answer": "You can reach us via the Contact Us page or email us at support@mensense.com."
          }
        }
      ]
    }
  ]
}
{% endschema %}
