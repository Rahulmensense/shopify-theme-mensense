<section class="page-header about-area-bg">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 col-12 col-md-5">
          <div class="banner-about-img">
             <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/about-banner-img.png?v=1756464259" alt="About Image">
          </div>
        </div>
        <div class="col-lg-6 col-12 col-md-7">
          <div class="page-header-content">
              <h1 class="title">About Us</h1>
              <h4 class="sub-title">Men needs skincare too</h4>
              <div class="hero-btn-wrap">
                <a href="#" class="ed-primary-btn">Shop</a>
              </div>
          </div>
        </div>
      </div>
    </div>
</section>
<!-- ./ page-header -->
<div class="about-wrapper container">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'mission' %}
        <div class="mission">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>

      {% when 'vision' %}
        <div class="vision">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>

      {% when 'team' %}
        <div class="team-member">
          <h3>{{ block.settings.name }}</h3>
          <p>{{ block.settings.role }}</p>
        </div>

      {% when 'faq' %}
        <div class="faq-item">
          <button>{{ block.settings.question }}</button>
          <div>{{ block.settings.answer }}</div>
        </div>

      
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "About Us Full Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "About Us"
    }
  ],
  "blocks": [
    {
      "type": "mission",
      "name": "Mission",
      "settings": [
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    },
    {
      "type": "vision",
      "name": "Vision",
      "settings": [
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "description", "label": "Description" }
      ]
    },
    {
      "type": "team",
      "name": "Team Member",
      "settings": [
        { "type": "text", "id": "name", "label": "Name" },
        { "type": "text", "id": "role", "label": "Role" }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question" },
        { "type": "textarea", "id": "answer", "label": "Answer" }
      ]
    },
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "About Us Full Page",
      "blocks": [
        { "type": "mission", "settings": { "title": "Our Mission", "description": "To empower men with skincare." } },
        { "type": "vision", "settings": { "title": "Our Vision", "description": "Normalize self-care for men." } },
        { "type": "team", "settings": { "name": "Rahul", "role": "Founder" } },
        { "type": "faq", "settings": { "question": "Are your products cruelty-free?", "answer": "Yes, 100% cruelty-free." } }
      ]
    }
  ]
}
{% endschema %}
