{% if section.settings.show_banner %}
  <section class="page-header about-area-bg">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 col-12 col-md-5">
          <div class="banner-about-img">
            <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/about-banner-img.png?v=1756464259" alt="About Image">
          </div>
        </div>
        <div class="col-lg-6 col-12 col-md-7">
          <div class="page-header-content">
            <h1 class="title">{{ section.settings.banner_heading }}</h1>
            <h4 class="sub-title">{{ section.settings.banner_subheading }}</h4>
            <div class="hero-btn-wrap">
              <a href="{{ section.settings.banner_button_link }}" class="ed-primary-btn">
                {{ section.settings.banner_button_text }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

<div class="about-wrapper container">
  {% if section.settings.heading != blank %}
    <h1>{{ section.settings.heading }}</h1>
  {% endif %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'mission' %}
        <div class="mission">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>

      {% when 'vision' %}
        <div class="vision">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.description }}</p>
        </div>

      {% when 'team' %}
        <div class="team-member">
          <h3>{{ block.settings.name }}</h3>
          <p>{{ block.settings.role }}</p>
        </div>

      {% when 'faq' %}
        <div class="faq-item">
          <button>{{ block.settings.question }}</button>
          <div>{{ block.settings.answer }}</div>
        </div>

      {% when 'image' %}
        <div class="about-image">
          <img src="{{ block.settings.image | image_url }}" alt="About Image">
        </div>
    {% endcase %}
  {% endfor %}
</div>

