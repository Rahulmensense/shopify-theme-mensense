<section class="all-products-hero">
  {% if section.settings.show_hero %}
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12 col-lg-12">
          <div class="hero-copy">
            <h1 class="title">{{ section.settings.hero_heading }}</h1>
            {% if section.settings.hero_subheading != blank %}
              <p class="sub-title">{{ section.settings.hero_subheading }}</p>
            {% endif %}
            {% if section.settings.hero_button_text != blank and section.settings.hero_button_link != blank %}
              <div class="hero-btn-wrap">
                <a href="{{ section.settings.hero_button_link }}" class="ed-primary-btn">
                  {{ section.settings.hero_button_text }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="col-12 col-lg-6">
          {% if section.settings.hero_image != blank %}
            <div class="hero-image">
              <img
                src="{{ section.settings.hero_image | image_url: width: 1100 }}"
                alt="{{ section.settings.hero_heading | escape }}"
                loading="lazy"
              >
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "checkbox", "id": "show_hero", "label": "Show hero", "default": true },
    { "type": "image_picker", "id": "hero_image", "label": "Hero image" },
    { "type": "text", "id": "hero_heading", "label": "Heading", "default": "All Products" },
    { "type": "text", "id": "hero_subheading", "label": "Subheading", "default": "Premium Skincare Made Just For Men â€” With Global Quality And Eastern Sensibility" },
    { "type": "text", "id": "hero_button_text", "label": "Button text", "default": "Shop Now" },
    { "type": "url", "id": "hero_button_link", "label": "Button link", "default": "/collections/all" }
  ],
  "presets": [{ "name": "Hero Banner" }]
}
{% endschema %}
