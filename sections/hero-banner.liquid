<section class="hero-section overflow-hidden">
  <div class="container">
    <div class="row align-items-center">
      <!-- Left Content -->
      <div class="col-lg-7 col-md-12">
        <div class="hero-content">
          <div class="section-heading mb-40">
            <h1 class="section-title wow fade-in-bottom" data-wow-delay="400ms">
              {{ section.settings.main_heading }}
            </h1>
            <p>Premium skincare made just for men â€” with global<br> quality and Indian sensibility.</p>
          </div>

          <div class="hero-btn-wrap">
            {% if section.settings.button_label != blank %}
              <a href="{{ section.settings.button_link }}" class="ed-primary-btn">
                {{ section.settings.button_label }}
              </a>
            {% endif %}
          </div>

          <div class="hero-author">
            <ul>
              {% for block in section.blocks %}
                {% if block.settings.author_img != blank %}
                  <li><img src="{{ block.settings.author_img | image_url }}" alt="author"></li>
                {% endif %}
              {% endfor %}
            </ul>
            <h5><span>100k</span> Happy Customers</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Look Good <br>Live Bold."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Try it today"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

