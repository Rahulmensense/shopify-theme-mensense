<section class="hero-section overflow-hidden">
  <div class="shapes">
    {% if section.settings.shape1 != blank %}
      <div class="shape shape-1"><img src="{{ section.settings.shape1 | image_url }}" alt="shape"></div>
    {% endif %}
    {% if section.settings.shape2 != blank %}
      <div class="shape shape-2"><img src="{{ section.settings.shape2 | image_url }}" alt="shape"></div>
    {% endif %}
    {% if section.settings.shape3 != blank %}
      <div class="shape shape-3"><img src="{{ section.settings.shape3 | image_url }}" alt="shape"></div>
    {% endif %}
  </div>

  <div class="container">
    <div class="row align-items-center">
      <!-- Left Content -->
      <div class="col-lg-7 col-md-12">
        <div class="hero-content">
          <div class="section-heading mb-40">
            <h4 class="sub-heading wow fade-in-bottom" data-wow-delay="200ms">
              <span class="heading-icon"><i class="fa-sharp fa-solid fa-bolt"></i></span>
              {{ section.settings.sub_heading }}
            </h4>
            <h2 class="section-title wow fade-in-bottom" data-wow-delay="400ms">
              {{ section.settings.main_heading }}
            </h2>
          </div>

          <div class="hero-btn-wrap">
            {% if section.settings.button_label != blank %}
              <a href="{{ section.settings.button_link }}" class="ed-primary-btn">
                {{ section.settings.button_label }}
              </a>
            {% endif %}

            {% if section.settings.video_url != blank %}
              <div class="hero-video">
                <div class="video-btn">
                  <a class="video-popup venobox vbox-item" data-autoplay="true" data-vbtype="video" href="{{ section.settings.video_url }}">
                    <div class="play-btn">
                      <i class="fa-sharp fa-solid fa-play"></i>
                    </div>
                    {{ section.settings.video_label }}
                  </a>
                </div>
              </div>
            {% endif %}
          </div>

          <div class="hero-author">
            <ul>
              {% for block in section.blocks %}
                {% if block.settings.author_img != blank %}
                  <li><img src="{{ block.settings.author_img | image_url }}" alt="author"></li>
                {% endif %}
              {% endfor %}
            </ul>
            <h5><span>{{ section.settings.enrollment_number }}</span> {{ section.settings.enrollment_text }}</h5>
          </div>

          <h4 class="bottom-text">{{ section.settings.bottom_text }}</h4>
        </div>
      </div>

      <!-- Right Image -->
      <div class="col-lg-5 col-md-12">
        <div class="hero-img-wrap">
          {% if section.settings.hero_img != blank %}
            <div class="hero-img">
              <img src="{{ section.settings.hero_img | image_url }}" alt="hero">
            </div>
          {% endif %}
          {% if section.settings.hero_shape != blank %}
            <div class="hero-img-shape"><img src="{{ section.settings.hero_shape | image_url }}" alt="shape"></div>
          {% endif %}
          <div class="hero-text-element">
            <h3 class="title"><span class="number">{{ section.settings.counter_number }}</span>+</h3>
            <p>{{ section.settings.counter_text }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "sub_heading", "label": "Sub Heading", "default": "Welcome to Online Education" },
    { "type": "html", "id": "main_heading", "label": "Main Heading", "default": "Start learning from <br>the worldâ€™s <span>best institutions</span>" },
    { "type": "text", "id": "button_label", "label": "Button Text", "default": "Get Started" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/contact" },
    { "type": "url", "id": "video_url", "label": "Video URL", "default": "https://youtu.be/JwC-Qx1lJso" },
    { "type": "text", "id": "video_label", "label": "Video Button Label", "default": "Watch the video" },
    { "type": "text", "id": "enrollment_number", "label": "Enrollment Number", "default": "10k" },
    { "type": "text", "id": "enrollment_text", "label": "Enrollment Text", "default": "Enrolment" },
    { "type": "text", "id": "bottom_text", "label": "Bottom Text", "default": "Explore <span>1350+</span> Courses within Subject" },
    { "type": "image_picker", "id": "hero_img", "label": "Hero Image" },
    { "type": "image_picker", "id": "hero_shape", "label": "Hero Shape" },
    { "type": "image_picker", "id": "shape1", "label": "Background Shape 1" },
    { "type": "image_picker", "id": "shape2", "label": "Background Shape 2" },
    { "type": "image_picker", "id": "shape3", "label": "Background Shape 3" },
    { "type": "text", "id": "counter_number", "label": "Counter Number", "default": "256" },
    { "type": "text", "id": "counter_text", "label": "Counter Text", "default": "Crashed Courses" }
  ],
  "blocks": [
    {
      "type": "author",
      "name": "Author Image",
      "settings": [
        { "type": "image_picker", "id": "author_img", "label": "Author Image" }
      ]
    }
  ],
  "presets": [
    { "name": "Hero Banner" }
  ]
}
{% endschema %}
