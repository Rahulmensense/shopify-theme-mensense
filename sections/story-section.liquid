{% schema %}
{
  "name": "Products Story Promise",
  "tag": "section",
  "class": "section-area-gradient",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Products Main Heading",
      "default": "We Don't Just Make Products. We Create Solutions,"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Products Left Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "About Heading Story Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "About Description Story Text",
      "default": "<p>Back in 2012, men’s skincare in India was an afterthought. Our founder saw the gap and built C-mens — a brand that started the conversation. Mensense takes it further, with superior ingredients, international standards, and a sharp focus on what men actually need. <br/> We’re here to make skincare simple, effective, and unapologetically masculine.</p>"
    },
    {
      "type": "image_picker",
      "id": "story_image",
      "label": "Story Image"
    },
    {
      "type": "text",
      "id": "promise_heading",
      "label": "Promise Heading",
      "default": "Our Promise"
    },
    {
      "type": "textarea",
      "id": "promise_text",
      "label": "Promise Text",
      "default": "Every product. Every detail..."
    }
  ],
  "blocks": [
    {
      "type": "list_item",
      "name": "Product List Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Made For Men"
        }
      ]
    },
    {
      "type": "promise_item",
      "name": "Promise Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "promise_icon",
          "label": "Promise Icon"
        },
        {
          "type": "text",
          "id": "promise_text",
          "label": "Promise Text",
          "default": "No Harsh Chemicals"
        }
      ]
    }
  ]
}
{% endschema %}

<!-- 1️⃣ Products We Create Section -->
<div class="products-we-create-after-shap-one">
  <div class="container">
    <div class="row pb-60">
      <div class="sub hadding-text">
        <h3>{{ section.settings.main_heading }}</h3>
      </div>

      <div class="products-section">
        <!-- Left Side Image -->
        <div class="img-area-left-about-sec">
          {% if section.settings.left_image != blank %}
            <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left side image">
          {% else %}
            <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/products-we-img-left.png?v=1756114761" alt="Left side image">
          {% endif %}
        </div>

        <!-- Right Side List -->
        <div class="list-area-about">
          <ul>
            {% if section.blocks.size > 0 %}
              {% for block in section.blocks %}
                <li>
                  {% if block.settings.icon != blank %}
                    <img src="{{ block.settings.icon | img_url: '32x32' }}" alt="icon">
                  {% else %}
                    <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/check-box-icon.png?v=1756114208" alt="icon">
                  {% endif %}

                  <p>
                    {% if block.settings.text != blank %}
                      {{ block.settings.text }}
                    {% else %}
                      Default Text
                    {% endif %}
                  </p>
                </li>
              {% endfor %}
            {% else %}
              <!-- If no blocks are added, fallback items -->
              <li>
                <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/check-box-icon.png?v=1756114208" alt="icon">
                <p>Made For Men</p>
              </li>
              <li>
                <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/check-box-icon.png?v=1756114208" alt="icon">
                <p>One product. Multiple needs.</p>
              </li>
              <li>
                <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/check-box-icon.png?v=1756114208" alt="icon">
                <p>Global quality. Indian relevance.</p>
              </li>
              <li>
                <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/check-box-icon.png?v=1756114208" alt="icon">
                <p>Visible results in 5–6 months.</p>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 2️⃣ Our Story Section -->
<div class="products-we-create-before-shap-one">
  <div class="container">
    <div class="row story-area mb-5 align-items-center">
      <div class="col-md-6">
        <div class="about-content">
          <div class="section-heading mb-40">
            <h2>{{ section.settings.heading }}</h2>
            <p class="mt-20">{{section.settings.description }}</p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/home-our-story-right1.png?v=1756129602" alt="Our story">
      </div>
    </div>
  </div>
</div>

<!-- 3️⃣ Our Promise Section -->
<div class="container">
  <div class="row promise-area text-center">
    <div class="col-12 mb-4">
      <h3>{{ section.settings.promise_heading }}</h3>
      <p>{{ section.settings.promise_text }}</p>
    </div>
    {% for block in section.blocks %}
      {% if block.type == 'promise_item' %}
        <div class="col-md-3 col-6 promise-box">
          <img src="{{ block.settings.promise_icon | img_url: '64x64' }}" alt="">
          <p>{{ block.settings.promise_text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

