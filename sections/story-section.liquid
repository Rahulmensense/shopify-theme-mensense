{% schema %}
{
  "name": "Story Section",
  "tag": "section",
  "class": "story-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Write your story here..."
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Story Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="story-section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.content }}</p>

    <ul>
      {% for block in section.blocks %}
        <li>{{ block.settings.text }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
