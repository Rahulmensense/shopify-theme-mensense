<section class="dermatologist-section py-5">
  <div class="container">
    <div class="dermatologist-bg-gradient">
      <div class="row align-items-center">

        <!-- Left Column - Doctor Image -->
        <div class="col-md-5 col-lg-6 col-12 text-center">
          <div class="doctor-hading">
            {% if section.settings.doctor_image != blank %}
              <img src="{{ section.settings.doctor_image | img_url: 'master' }}" alt="Doctor" class="img-fluid">
            {% endif %}
            <h3 class="mb-3">{{ section.settings.heading }}</h3>
          </div>
        </div>

        <!-- Middle Column - Product + Heading -->
        <div class="col-md-6 col-lg-3 col-12 text-center">
          {% if section.settings.product_image != blank %}
            <img src="{{ section.settings.product_image | img_url: 'master' }}" alt="Product" class="img-fluid mb-3">
          {% endif %}
        </div>

        <!-- Right Column - Feedback Slider -->
        <div class="col-md-6 col-lg-3 col-12">
          <div class="feedback-slider">
            <div class="feedback-slide">
              <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s unchanged.</p>
              <div class="stars mb-2">⭐⭐⭐⭐⭐</div>
              <strong>Ravi Sharma</strong>
            </div>
            <div class="feedback-slide">
              <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s unchanged.</p>
              <div class="stars mb-2">⭐⭐⭐⭐</div>
              <strong>Neha Kapoor</strong>
            </div>
            <div class="feedback-slide">
              <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s unchanged.</p>
              <div class="stars mb-2">⭐⭐⭐⭐⭐</div>
              <strong>Dr. Aman Verma</strong>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Derm Approval Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "doctor_image",
      "label": "Doctor Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Dermatologist Approved"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    }
  ],
  "presets": [
    {
      "name": "Derm Approval Slider",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}

