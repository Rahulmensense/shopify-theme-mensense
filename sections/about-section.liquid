{% schema %}
{
  "name": "About",
  "tag": "section",
  "class": "about-section pt-120",
  "settings": [
    {
      "type": "image_picker",
      "id": "about_image",
      "label": "About Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "About Heading",
      "default": "The Mensense Difference"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "About Description",
      "default": "Why choose a product that doesn’t understand your skin? At Mensense, every formulation is designed to perform — no matter your schedule, skin type, or climate."
    }
  ]
