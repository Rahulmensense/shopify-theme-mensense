}
{% endschema %}

<div class="container">
  <div class="row align-items-center">
    <!-- About Section -->
    <div class="col-xl-7 col-lg-7 col-12">
      <div class="about-img-wrap">
        {% if section.settings.about_image != blank %}
          <img src="{{ section.settings.about_image | img_url: 'master' }}" alt="About image">
        {% else %}
          <img src="https://cdn.shopify.com/s/files/1/0949/0975/9774/files/about-sec-img.png?v=1756107496" alt="About image">
        {% endif %}
      </div>
    </div>

    <div class="col-xl-5 col-lg-5 col-12">
      <div class="about-content">
        <div class="section-heading mb-40">
          <h2>{{ section.settings.heading }}</h2>
          <p class="mt-20">{{ section.settings.description }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

