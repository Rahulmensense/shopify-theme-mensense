{% schema %}
{
  "name": "About Section",
  "tag": "section",
  "class": "about-section pt-120 pb-120",
  "settings": [
    {
      "type": "image_picker",
      "id": "about_image",
      "label": "About Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Mensense Difference"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Why choose a product that doesn’t understand your skin? At Mensense, every formulation is designed to perform — no matter your schedule, skin type, or climate."
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="container">
  <div class="row align-items-center">
    <!-- Left Image -->
    <div class="col-xl-6 col-lg-12">
      <div class="about-img-wrap">
        {% if section.settings.about_image != blank %}
          <img src="" alt="About images">
        {% endif %}
      </div>
    </div>

    <!-- Right Content -->
    <div class="col-xl-6 col-lg-12">
      <div class="about-content">
        <div class="section-heading mb-40">
          <h2>{{ section.settings.heading }}</h2>
          <p>{{ section.settings.description }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
