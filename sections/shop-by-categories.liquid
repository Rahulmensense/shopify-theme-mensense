{% schema %}
{
  "name": "Shop By Categories",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Shop By Categories"
    }
  ]
}
{% endschema %}

<div class="shop-by-categories">
  <h2 class="section-title">Shop By Categories</h2>
  <div class="product-grid">
    {% for product in collections['all'].products limit:4 %}
      <div class="product-card">
        <a href="{{ product.url }}" class="product-image-link">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        </a>
        <h3 class="product-title">{{ product.title }}</h3>
        <p class="product-price">{{ product.price | money }}</p>

        <div class="product-actions">
          <form method="post" action="/cart/add">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="btn add-to-cart">Add to Cart</button>
          </form>

          <button class="btn like-button" aria-label="Like this product">❤️</button>
          <a href="{{ product.url }}" class="btn view-details">View Details</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
