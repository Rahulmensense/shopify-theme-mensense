{% schema %}
{
  "name": "Shop By Categories",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Shop By Categories"
    }
  ]
}
{% endschema %}

<section class="shop-by-categories">
  <div class="container">
    <h2 class="section-title">Shop By Categories</h2>
    <div class="product-grid">
      {% for product in collections['all'].products limit:4 %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-image-link">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          </a>
          <h3 class="product-title">{{ product.title }}</h3>
          {% assign conversion_rate = 0.012 %}
          {% assign usd_price = product.price | times: conversion_rate | round: 2 %}

          <p class="product-price">
            ‚Çπ{{ product.price | money }}  
            <br>
            üíµ USD: ${{ usd_price }}
          </p>


          <div class="product-actions-icons">
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="icon-btn" title="Add to Cart">üõí</button>
            </form>

            <button class="icon-btn" title="Like">‚ù§Ô∏è</button>
            <a href="{{ product.url }}" class="icon-btn" title="View Details">üîç</a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="shop-all-area">
      <a href="#" class="ed-primary-btn">Shop now</a>
    </div>
  </div>
</section>
